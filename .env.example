# Media Downloader Bot - Environment Variables
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# ============================================================
# Bot Configuration
# ============================================================
BOT_TOKEN=your_bot_token_here
ADMIN_ID=your_telegram_user_id

# Multiple Admins (comma-separated)
# Example: ADMIN_IDS=123456789,987654321
ADMIN_IDS=your_admin_ids_here

# ============================================================
# Telegram Client API Credentials
# Get from https://my.telegram.org/apps
# ============================================================
API_ID=your_api_id_here
API_HASH=your_api_hash_here

# ============================================================
# ACRCloud API Credentials (Optional - for music recognition)
# Get from https://www.acrcloud.com/
# ============================================================
ACRCLOUD_ACCESS_KEY=your_acrcloud_access_key
ACRCLOUD_ACCESS_SECRET=your_acrcloud_secret_key
ACRCLOUD_HOST=identify-ap-southeast-1.acrcloud.com

# ============================================================
# Bot Settings
# ============================================================
DOWNLOAD_DIR=downloads
MAX_FILE_SIZE=2147483648
ENABLE_LARGE_FILES=True
ENABLE_MUSIC_RECOGNITION=True

# ============================================================
# Security Settings (Optional)
# ============================================================
# Rate limiting (requests per minute per user)
RATE_LIMIT_REQUESTS=10

# Maximum upload file size (bytes)
# Bot API: 52428800 (50MB)
# Client API: 2147483648 (2GB)
BOT_API_LIMIT=52428800
CLIENT_API_LIMIT=2147483648
